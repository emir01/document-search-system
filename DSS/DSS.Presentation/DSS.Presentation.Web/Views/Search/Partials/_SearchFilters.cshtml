
<div class="span4">
    <div class="well">
        <div id="dashboard" class="clearfix">

            <div class="row-fluid">
                <div id="title" class="dashboard-item">
                    <span class="dashboard-item-label">
                        Title:
                    </span>

                    <div class="row-fluid">
                        <div class="span12">
                            <input type="text" data-bind="value: titleSearch" id="title-search-input" class="input-block-level" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div id="author" class="dashboard-item">
                    <span class="dashboard-item-label">
                        Author:
                    </span>

                    <div class="row-fluid">
                        <div class="span12">
                            <input type="text" data-bind="value: authorSearch" id="author-search-input" class="input-block-level" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div id="author" class="dashboard-item">
                    <span class="dashboard-item-label">
                        Categories:
                    </span>

                    <div class="row-fluid">
                        <div class="span12">
                            <select data-placeholder=""
                                    data-bind="simpleSelect2Binding:{data:$root.categories, selected:$root.selectedCategories}, optionsValue:'Name', optionsText:'Name'"
                                    size="5"
                                    multiple="multiple"
                                    class="input-block-level"></select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="dashboard-item search-controls">
                    <button data-bind="click: applyCriteria" id="search-content-button" class="btn btn-primary">
                        <i class="icon-search"></i>
                        Search...
                    </button>

                    <button data-bind="click: clearCriteria" id="clear-search-content-button" class="btn btn-primary">
                        <i class="icon-search"></i>
                        Clear...
                    </button>

                </div>
            </div>
        </div>
    </div>
</div>